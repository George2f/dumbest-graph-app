generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Node {
  id      Int   @id @default(autoincrement())
  Graph   Graph @relation(fields: [graphId], references: [id])
  graphId Int

  Comment Comment[]

  name      String
  SourceOf  Link[]      @relation(name: "source")
  TargetOf  Link[]      @relation(name: "target")
  Attribute Attribute[]
}

model Attribute {
  id     Int  @id @default(autoincrement())
  nodeId Int
  Node   Node @relation(fields: [nodeId], references: [id])

  key   String
  value String
}

model Link {
  id      Int   @id @default(autoincrement())
  Graph   Graph @relation(fields: [graphId], references: [id])
  graphId Int

  Comment Comment[]

  name     String
  type     String
  sourceId Int
  Source   Node   @relation(name: "source", fields: [sourceId], references: [id])
  targetId Int
  Target   Node   @relation(name: "target", fields: [targetId], references: [id])
}

model Comment {
  id      Int   @id @default(autoincrement())
  Graph   Graph @relation(fields: [graphId], references: [id])
  graphId Int

  node   Node? @relation(fields: [nodeId], references: [id])
  nodeId Int?
  link   Link? @relation(fields: [linkId], references: [id])
  linkId Int?

  text String
}

model Tag {
  id      Int   @id @default(autoincrement())
  Graph   Graph @relation(fields: [graphId], references: [id])
  graphId Int

  name  String
  color String
}

model Graph {
  id   Int    @id @default(autoincrement())
  name String

  nodes    Node[]
  links    Link[]
  tags     Tag[]
  comments Comment[]
}
